    <div class="row">
    <div class="col-xs-9">
    <table class="table table-hover">
    <h3>お知らせ一覧</h3>
    <thead>
    <tr>
    <td>タイトル</td>
    <td>日時</td>
    <td>お知らせ内容</td>
    <td colspan="2">詳細画面</td>
    </tr>
    </thead>
    <tbody>
    <% @informations.each do |i| %>
    <tr>
    <td><%= i.title %></td>
    <td><%= i.created_at.strftime("%Y-%m-%d %H:%M") %></td>
    <td><%= i.content %></td>
    <td colspan="2">
    <%= link_to "詳細", information_path(i.id), class: "btn-sm btn-success" %></td>
    </tr>
    <% end %>
    </tbody>
    </table>
    </div>

      <div class="col-xs-2">
    <!-- プロフィール -->
    <% if ad_client_signed_in? %>
    <%= render 'ad_clients/profile', ad_client: current_ad_client %>
    <%= render 'ad_clients/sidebar', ad_client: current_ad_client %>
    <% elsif owner_signed_in?%>
    <%= render 'owners/profile', owner: current_owner %>
    <%= render "owners/sidebar", owner: current_owner %>
    <% end %>
    </div>

    </div>